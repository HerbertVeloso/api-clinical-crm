// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Patients {
  id               String          @id @default(uuid())
  name             String
  phone            String
  email            String?
  birthday         DateTime
  health_insurance String
  created_at       DateTime        @default(now())
  consultations    Consultations[]
  surgeries        Surgeries[]

  @@map("patients")
}

model Consultations {
  id            String   @id @default(uuid())
  patient       Patients @relation(fields: [fk_id_patient], references: [id])
  fk_id_patient String
  date          DateTime
  created_at    DateTime @default(now())
  modified_at   DateTime

  @@map("consultations")
}

model Surgeries {
  id            String   @id @default(uuid())
  patient       Patients @relation(fields: [fk_id_patient], references: [id])
  fk_id_patient String
  date          DateTime
  type          String
  hospital      String
  created_at    DateTime @default(now())
  modified_at   DateTime
}
